<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/Header.ejs') %>

<body>
    <style>
        h1 {
            text-align: center;
            font-size: 150%;
        }
        .alignCenter {
            text-align: center;
            display: block;
            margin: auto;
            width: 70%;
        }

    </style>
    <%- include('./partials/NavBar.ejs') %>
    
    <h1>All Courses Available</h1>
    <a class="linkButton alignCenter" href="/courses/create">Create Course</a>
    
    <div class="courses">

        <% if (courses.length > 0) { %>
            <% courses.forEach(course => { %>
            <div class="class alignCenter">
                <a class="class" href="/courses/<%= course._id%>">
                    <h2 class="title classTitle"><%= course.title %></h2>
                </a>
                <p class="desc"><%= course.desc %></p>
                <ul class="classBox">
                    <li class="classItem"><h3 class="subject">Subject: <%= course.subject %>|</h3></li>
                    <li class="classItem"><h3 class="credits">Credits: <%= course.credits %></h3></li>
                </ul>
            </div>
            <% }) %>
        <% } else { %>
            <p> No courses available!</p>
        <% } %>
    </div>

    <%- include('./partials/Footer.ejs') %>
</body>
</html>